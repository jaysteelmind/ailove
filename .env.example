# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/ailove?schema=public"

# Qdrant Vector Database
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""

# Redis Cache
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Grok AI API (X.AI)
GROK_API_KEY=""
GROK_API_URL="https://api.x.ai/v1"

# OpenAI (for embeddings)
OPENAI_API_KEY=""

# JWT Authentication
JWT_SECRET="change-this-to-a-secure-random-string"
JWT_REFRESH_SECRET="change-this-to-another-secure-random-string"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration
NODE_ENV="development"
PORT="3000"
API_VERSION="v1"

# RBS Algorithm Configuration
RBS_ALPHA="0.45"
RBS_BETA="0.30"
RBS_GAMMA="0.25"
RBS_DELTA="0.15"

# Performance Targets
RBS_PIPELINE_TIMEOUT_MS="300"
VECTOR_SEARCH_TIMEOUT_MS="200"
DB_QUERY_TIMEOUT_MS="100"

# Causal Uplift (Modal.com)
MODAL_TOKEN_ID=""
MODAL_TOKEN_SECRET=""
MODAL_DEPLOYMENT_NAME="ailove-causal-uplift"

# Logging & Monitoring
LOG_LEVEL="info"
SENTRY_DSN=""

# Feature Flags
ENABLE_AI_COACHING="true"
ENABLE_CAUSAL_UPLIFT="true"
ENABLE_SAFETY_CONSTRAINTS="true"
